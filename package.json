{
  "name": "notex",
  "version": "1.0.0",
  "description": "Secure offline encrypted notes",
  "main": "main.js",
  "author": "Subyyal Khan",
  "license": "MIT",

  "scripts": {
    "start": "electron .",
    "build:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win msi"
  },

  "build": {
    "appId": "com.notex.app",
    "productName": "NoteX",

    "directories": {
      "output": "dist"
    },

    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/.bin"
    ],

    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],

    "win": {
      "target": [
        {
          "target": "msi",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },

    "msi": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NoteX",
      "runAfterFinish": true
    }
  },

  "dependencies": {
    "uuid": "^9.0.0"
  },

  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  }
}
